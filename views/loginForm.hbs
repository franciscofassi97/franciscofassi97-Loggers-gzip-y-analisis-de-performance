{{#if error }}
<section>
	<h1>Error al intentar Iniciar Sesion</h1>
	<div class="box">
		<p>{{error}}</p>
		<button><a href="http://localhost:8080/api/usuarios/login">Volver</a></button>
	</div>

</section>
{{else}}
<section>
	<h1>Iniciar Sesion</h1>
	<div class="box">
		{{!-- <form action="/api/productos/create" method="post"> --}}
			<form action="/api/usuarios/login" method="post">
				<label for="username">Correo Electronico</label>
				<input type="text" name="username" placeholder="Ingrese nombre" id="username">
				<label for="password">Password</label>
				<input type="password" name="password" placeholder="Ingrese nombre" id="password">
				<input type="submit" value="Iniciar">
			</form>
			<button><a href="http://localhost:8080/api/usuarios/registro">Registrarse</a></button>
			<br>
	</div>
</section>
{{/if}}